<div class='content'>
  <div class='row form-header'>
    <h1 class='row'>Sign in</h1>
    <p class='row'>
      or <a href='/sign-up'>sign up</a>
    </p>
  </div>

  <form class='form-body row' method='POST' action='/sessions'>
    <input type='hidden' name="_csrf" value="{{csrf}}">
    <label class='row' for='email'>Email</label>
    <div class='unit d-size-1-3 t-size-1-2 m-row'>
      <div class='input-container'>
        <input required type='email' name='email' value='{{email}}' placeholder='Email' class='size-1-1'>
      </div>
    </div>

    <label class='row' for='password'>Password</label>
    <div class='unit d-size-1-3 t-size-1-2 m-row'>
      <div class='input-container'>
        <input required minlength='8' type='password' name='password' placeholder='Password' class='size-1-1'>
      </div>
    </div>

    <div class='row'>
      <input type='submit' value='Sign in'>
    </div>
  </form>
</div>
